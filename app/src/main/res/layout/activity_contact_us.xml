<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/contact_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系客服"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/contact_us_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="您的邮箱"
        android:inputType="textEmailAddress"
        android:layout_below="@id/contact_us_title"
        android:focusable="false"
        android:clickable="false"/>

    <EditText
        android:id="@+id/contact_us_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="主题"
        android:layout_below="@id/contact_us_email"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/contact_us_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="内容"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minHeight="200dp"
        android:layout_below="@id/contact_us_subject"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/contact_us_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        android:layout_below="@id/contact_us_message"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
