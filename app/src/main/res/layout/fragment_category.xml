<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部的导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:background="@drawable/button_background_selected"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:background="@drawable/button_background_unselected"
            android:textColor="@color/colorBlack"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="搜索"
            android:background="@drawable/search_background"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_search"/>
    </LinearLayout>

    <!-- 主体内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左侧分类列表 -->
        <ListView
            android:id="@+id/listView_categories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@color/colorWhite"/>

        <!-- 右侧内容 -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 默认热门推荐 -->
            <TextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_marginBottom="8dp"/>

            <HorizontalScrollView
                android:id="@+id/scrollView_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/layout_recommend_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 示例商品 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/placeholder_category"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥300.00"
                            android:textSize="14sp"
                            android:textColor="@color/red"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- 更多商品项... -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 常用分类 -->
            <TextView
                android:id="@+id/tv_common_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用分类"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:id="@+id/grid_common_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- 示例分类项 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/placeholder_category"
                        android:contentDescription="古风"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="古风"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:paddingTop="4dp"/>
                </LinearLayout>

                <!-- 更多分类项... -->

            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
