<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部的导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:background="@drawable/button_background_selected"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/button_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:background="@drawable/button_background_unselected"
            android:textColor="@color/colorBlack"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="搜索"
            android:background="@drawable/search_background"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_search"/>

        <!-- 新增的编辑按钮 -->
        <TextView
            android:id="@+id/cart_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 主体内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左侧分类列表 -->
        <ListView
            android:id="@+id/listView_categories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@color/colorWhite"/>

        <!-- 右侧内容 -->
        <FrameLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="8dp">

            <!-- 默认显示的热门推荐 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_recommend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门推荐"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:id="@+id/scrollView_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/layout_recommend_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 示例商品 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/placeholder_category"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥300.00"
                                android:textSize="14sp"
                                android:textColor="@color/red"
                                android:gravity="center"/>
                        </LinearLayout>

                        <!-- 更多商品项... -->

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <!-- 编辑模式下的按钮 -->
    <LinearLayout
        android:id="@+id/edit_mode_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkbox_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:buttonTint="@color/colorPrimary"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/button_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>
