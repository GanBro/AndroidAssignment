<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_product_image_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_product_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_product_image_detail"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="商品名称"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_product_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name_detail"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="价格"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_add_to_cart_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_price_detail"
        android:layout_marginTop="16dp"
        android:text="添加到购物车" />

    <Button
        android:id="@+id/btn_add_to_cart_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_add_to_cart_detail"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="添加到购物车" />
</RelativeLayout>
