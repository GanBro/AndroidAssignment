<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ganbro.shopmaster">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShopMasterApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopMaster.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.ProductDetailActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.FavoritesActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.OrderDetailsActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.SelectAddressActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.AddAddressActivity"
            android:exported="true">
        </activity>

        <!-- 确保 AddressListActivity 也在这里声明 -->
        <activity
            android:name=".activities.AddressListActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>
